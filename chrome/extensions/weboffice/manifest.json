{
    "manifest_version": 2,
    "name": "weboffice",
    "version": "1.0.0",
    "description": "金山文档",
    "browser_action": {
        "default_icon": "images/logo.png",
        "default_title": "金山文档"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    // "page_action": {
    //     "default_popup": "html/popup.html",
    //     "default_icon": "images/logo.png",
    //     "default_title": "金山文档"
    // },
    "options_page": "html/options.html",
    "icons": {
        "16": "images/logo.png",
        "32": "images/logo.png",
        "48": "images/logo.png",
        "128": "images/logo.png"
    },
    "permissions": [
        "activeTab",
        "declarativeContent", 
        "storage",
        "tabs",
        "contextMenus",
        "location",
        "cookies",
        "http://*/*", 
        "https://*/*"
    ],
    // 只能指向一个HTML文件，不能是JS文件
    "devtools_page": "html/devtools.html"
}